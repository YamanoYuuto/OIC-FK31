@page
@model RegisterConfirmationModel
@{
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>施設予約システム - メール認証</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/ResetPasswordConfirmation.css" />
</head>
<body>
    <!-- ナビゲーションバー -->
    <nav class="navbar">
        <img src="~/images/logo.png" alt="施設予約システム" class="img-fluid" />
    </nav>

    <!-- フォーム部分 -->
    <div class="container">
        <div class="password-form shadow p-3 mb-5 bg-body rounded">
            <h2 class="fs-5 text-center mb-4 mt-3">認証メールを送信しました</h2>

            @if (Model.DisplayConfirmAccountLink)
            {
                <p class="text-center mb-3">
                    メールを確認して、メールアドレスの承認を完了してください。
                </p>
            }

            <div class="text-center">
                <a id="resend-confirmation" asp-page="./Login" class="btn btn-link">ログインに戻る</a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
