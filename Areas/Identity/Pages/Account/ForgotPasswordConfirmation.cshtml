@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "パスワード再設定メールを送信しました";
}




<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>施設予約システム - 確認メール</title>
    <!-- Bootstrap CSS -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/ForgotPasswordConfirmation.css" />
</head>
<body>
    <!-- ナビゲーションバー -->
    <nav class="navbar">
        <img src="~/images/logo.png" alt="施設予約システム" class="img-fluid" />
    </nav>

    <!-- フォーム部分 -->
    <div class="container">
        <div class="password-form shadow p-3 mb-4 bg-body rounded">
            <h2>再設定のメールを送信しました</h2>
            <p>
                登録したメールアドレスへパスワード再設定リンクを送信しました。<br />
                リンクから再設定を行ってください。
            </p>
           
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
