@page
@model ResetPasswordModel
@{
}




<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>施設予約システム - ログイン</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/ResetPassword.css" />
    <style>
        .password-form {
            max-width: 500px; /* 横幅の制限 */
            margin: 0 auto; /* 中央寄せ */
        }
    </style>
</head>
<body>
    <!-- ナビゲーションバー -->
    <nav class="navbar">
        <img src="~/images/logo.png" alt="施設予約システム" class="img-fluid" />
    </nav>
    <!-- フォーム部分 -->
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6">
                <!-- 中央に配置 -->
                <div class="password-form shadow p-4 bg-body rounded">
                    <h1 class="fs-3 text-center mb-4">パスワード再設定</h1>
                    <p class="text-center mb-3">
                        登録したメールアドレスと新しいパスワードを入力してください。
                    </p>
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">登録メールアドレス</label>
                            <input asp-for="Input.Email" class="form-control" placeholder="example@example.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">新パスワード</label>
                            <input asp-for="Input.Password" class="form-control" type="password" placeholder="" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">新パスワード（確認）</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-dark w-100">パスワードを再設定する</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
