@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "";
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>施設予約システム - パスワードの再設定完了しました</title>
    <!-- Bootstrap CSS -->

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/ResetPasswordConfirmation.css" />
</head>
<body>
    <!-- ナビゲーションバー -->
    <nav class="navbar">
        <img src="~/images/logo.png" alt="施設予約システム" class="img-fluid" />
    </nav>

    <!-- フォーム部分  mb が縦下の余白 mtは上方向に余白-->
    <div class="container">
        <div class="password-form shadow p-3 mb-5 bg-body rounded ">
            <h2 class="fs-5 text-center mb-4 mt-3">パスワードが正常に変更されました</h2>
            
            <p class="text-center mb-3">
                パスワードが再設定されました。<br />
                ログイン画面に戻ってログインしてください。<br />
            </p>
            <p class="text-center">
                <a asp-page="./Login">ログイン画面へ戻る</a>
            </p>

        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
