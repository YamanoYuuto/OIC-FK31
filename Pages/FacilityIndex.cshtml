@page
@model OIC_FK31.Pages.FacilityIndexModel
@{
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>施設予約システム - 施設一覧</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/FacilityIndex.css" />
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
</head>
<body>
    <!-- ナビゲーションバー -->
    <nav class="navbar">
        <img src="~/images/logo.png" alt="施設予約システム" class="img-fluid" />
    </nav>
    <div class="back-button mt-4" style="padding: 10px 20px;">
        <a asp-page="./TopMenu" class="btn btn-outline-secondary">戻る</a>
    </div>
    <div class="container mt-4">
        <h1 class="fs-4 text-center">施設一覧</h1>
        <div class="mb-3 text-center">
            
            <a asp-page="FacilityAdd" class="btn btn-primary ">施設作成</a>
        </div>

        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>施設名</th>
                    <th>住所</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Facility)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FacilityName)</td>
                        <td>@Html.DisplayFor(modelItem => item.FacilityAddress)</td>
                        <td>
                            <a asp-page="./FacilityEdit" asp-route-id="@item.FacilityID" class="btn btn-warning btn-sm">編集・詳細</a> |
                            <a asp-page="./FacilityDelete" asp-route-id="@item.FacilityID" class="btn btn-danger btn-sm">削除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
