<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>予約情報</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Info.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid navbar-content">
            <img src="~/images/Logo.png" alt="施設予約システム" class="img-fluid" />
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Reserve">今すぐ予約</a></li>
                    <li class="nav-item"><a class="nav-link" href="/ReservationStatus">予約状況確認</a></li>
                    <li class="nav-item"><a class="nav-link" href="/CancelReservation">予約キャンセル</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            管理者の方
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/FacilityRegistration">施設の登録と変更</a></li>
                            <li><a class="dropdown-item" href="/UserManagement">使用者情報管理</a></li>
                            <li><a class="dropdown-item" href="/ReportOutput">事務員用レポート出力</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a id="logoutButton" class="nav-link" href="Login.html">ログアウト</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1>予約情報</h1>
        <button class="back-button" onclick="history.back()">← 日時選択へ</button>

        <script src="https://yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>

        <form class="h-adr" onsubmit="saveReservationData(event)">
            <span class="p-country-name" style="display:none;">Japan</span>
            <div class="mb-3">
                <label class="form-label">選択された日時</label>
                <ul id="reservationList">データを読み込んでいます...</ul>
            </div>

            <div class="mb-3">
                <label for="first_name" class="form-label">姓 (Fast Name)</label>
                <input type="text" class="form-control" id="first_name" name="first_name" required>
            </div>

            <div class="mb-3">
                <label for="last_name" class="form-label">名 (Last Name)</label>
                <input type="text" class="form-control" id="last_name" name="last_name" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">メールアドレス</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <div class="mb-3">
                <label for="email_confirm" class="form-label">メールアドレス（再入力用）</label>
                <input type="email" class="form-control" id="email_confirm" name="email_confirm" required>
            </div>

            <div class="mb-3">
                <label for="phone" class="form-label">電話番号</label>
                <input type="tel" class="form-control" id="phone" name="phone" required>
            </div>

            <div class="mb-3">
                <label for="phone_confirm" class="form-label">電話番号（再入力用）</label>
                <input type="tel" class="form-control" id="phone_confirm" name="phone_confirm" required>
            </div>

            <div class="mb-3">
                <label for="postal_code" class="form-label">郵便番号</label>
                <input type="text" class="form-control p-postal-code" id="postal_code" name="postal_code" size="8" maxlength="8" required>
            </div>

            <div class="mb-3">
                <label for="prefecture" class="form-label">都道府県</label>
                <input type="text" class="form-control p-region" id="prefecture" name="prefecture" required>
            </div>

            <div class="mb-3">
                <label for="city" class="form-label">市区町村</label>
                <input type="text" class="form-control p-locality" id="city" name="city" required>
            </div>

            <div class="mb-3">
                <label for="address" class="form-label">丁目・番地</label>
                <input type="text" class="form-control p-street-address p-extended-address" id="address" name="address" required>
            </div>

            <div class="mb-3">
                <label for="building" class="form-label">建物名・部屋番号</label>
                <input type="text" class="form-control" id="building" name="building">
            </div>

            <button type="submit" class="submit-button">確認画面へ</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const selectedTimes = JSON.parse(localStorage.getItem('selectedTimes') || "{}");
            const reservationList = document.getElementById('reservationList');

            if (Object.keys(selectedTimes).length > 0) {
                reservationList.innerHTML = Object.entries(selectedTimes)
                    .map(([date, times]) => `<li><b>${date}</b>: ${times.join(', ')}</li>`)
                    .join('');
            } else {
                reservationList.innerHTML = '<li>選択された日時がありません</li>';
            }
        });
        function saveReservationData(event) {
            event.preventDefault();

            // 日時情報を取得
            const reservationList = document.getElementById('reservationList');

            //日時時刻はlist型で抽出しているから　trim使ってます
            const selectedTimesText = reservationList.innerText.trim();

            // 再入力用フィールドを除いた予約情報を保存
            const reservationInfo = {
                datetime: selectedTimesText,  // ここでreservationListの内容を保存する
                fastname: document.getElementById('first_name').value,
                lastname: document.getElementById('last_name').value,
                email: document.getElementById('email').value,
                phone: document.getElementById('phone').value,
                postal_code: document.getElementById('postal_code').value,
                prefecture: document.getElementById('prefecture').value,
                city: document.getElementById('city').value,
                address: document.getElementById('address').value,
                building: document.getElementById('building').value,
            };

            // ローカルストレージに保存
            localStorage.setItem('reservationInfo', JSON.stringify(reservationInfo));

            // 確認ページに遷移
            window.location.href = "/confirmation";
        }


    </script>
    <script>

        document.getElementById("logoutButton").addEventListener("click", function (event) {
            event.preventDefault();
            Swal.fire({
                title: "ログアウトしますか？",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "はい",
                cancelButtonText: "いいえ",
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: "ログアウトしました",
                        icon: "success"
                    }).then(() => {
                        window.location.href = "/Identity/Account/Logout";
                    });
                }
            });
        });
    </script>
</body>
</html>
