@page
@model OIC_FK31.Pages.InfoModel
@{
}

<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>予約情報</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Info.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid navbar-content">
            <img src="~/images/Logo.png" alt="施設予約システム" class="img-fluid" />
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Reserve">今すぐ予約</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ReservationStatus">予約状況確認</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/CancelReservation">予約キャンセル</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            管理者の方
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/FacilityRegistration">施設の登録と変更</a></li>
                            <li><a class="dropdown-item" href="/UserManagement">使用者情報管理</a></li>
                            <li><a class="dropdown-item" href="/ReportOutput">事務員用レポート出力</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a id="logoutButton" class="nav-link" href="Login.html">ログアウト</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <h1>予約情報</h1>

        <button class="back-button" onclick="history.back()">← 日時選択へ</button>

        <script src="https://yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>

        <form class="h-adr" action="confirm.html" method="POST">
            <span class="p-country-name" style="display:none;">Japan</span>
            <div class="mb-3">
                <label class="form-label">選択された日時</label>
                <ul id="reservationList">データを読み込んでいます...</ul>
            </div>

            <div class="mb-3">
                <label asp-for="Input.First_Name" class="form-label">姓 (Fast Name)</label>
                <input asp-for="Input.First_Name" type="text" class="form-control" id="first_name" required>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Last_Name" class="form-label">名 (Last Name)</label>
                <input asp-for="Input.Last_Name" type="text" class="form-control" id="last_name" required>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">メールアドレス</label>
                <input asp-for="Input.Email" type="email" class="form-control" id="email" required>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Email_Confirm" class="form-label">メールアドレス（再入力用）</label>
                <input asp-for="Input.Email_Confirm" type="email" class="form-control" id="email_confirm" required>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Phone" class="form-label">電話番号</label>
                <input asp-for="Input.Phone" type="tel" class="form-control" id="phone" required>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Email_Confirm" class="form-label">電話番号（再入力用）</label>
                <input asp-for="Input.Email_Confirm" type="tel" class="form-control" id="phone_confirm" required>
            </div>

            <div class="mb-3">
                <label class="form-label">住所</label>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-8">
                    <label asp-for="Input.Postal_Code" class="form-label">郵便番号</label>
                    <input asp-for="Input.Postal_Code" type="text" class="form-control" id="postal_code" required>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="button" asp-page="/Info" asp-page-handler="Serch" class="btn btn-dark w-100">検索</button>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Prefecture" class="form-label">都道府県</label>
                <select asp-for="Input.Prefecture" class="form-select" id="prefecture" required>
                    <option value="">選択してください</option>
                    <option value="大阪府">大阪府</option>
                    <option value="東京都">東京都</option>
                    <!-- 他の都道府県もここに追加 -->
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Input.City" class="form-label">市区町村</label>
                <input asp-for="Input.City" type="text" class="form-control" id="city" required>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Address" class="form-label">丁目・番地</label>
                <input asp-for="Input.Address" type="text" class="form-control" id="address" required>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Building" class="form-label">建物名・部屋番号</label>
                <input asp-for="Input.Building" type="text" class="form-control" id="building" >
            </div>

            <button type="submit" class="submit-button">確認画面へ</button>
        </form>
    </div>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // ページロード時にlocalStorageからデータを取得して表示
        document.addEventListener('DOMContentLoaded', function () {
            const selectedTimes = JSON.parse(localStorage.getItem('selectedTimes') || "{}");
            const reservationList = document.getElementById('reservationList');

            if (Object.keys(selectedTimes).length > 0) {
                reservationList.innerHTML = Object.entries(selectedTimes)
                    .map(([date, times]) => `<li><b>${date}</b>: ${times.join(', ')}</li>`)
                    .join('');
            } else {
                reservationList.innerHTML = '<li>選択された日時がありません</li>';
            }
        });
    </script>
    <script>
        document.getElementById("logoutButton").addEventListener("click", function (event) {
            event.preventDefault(); // デフォルトのリンク動作を防ぐ
            Swal.fire({
                title: "ログアウトしますか？",
                text: "",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "はい",
                cancelButtonText: "いいえ",
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: "ログアウトしました",
                        text: "",
                        icon: ""
                    }).then(() => {
                        window.location.href = "/Identity/Account/Logout";
                    });
                }
            });
        });
    </script>

    <script>
        function goBack() {
            window.history.back();
        }
    </script>
</body>
</html>
