@page
@model OIC_FK31.Pages.FacilityDeleteModel
@{
}
<h1>Delete</h1>

<div>
    <h4>詳細・削除</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <a>施設名</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Facilities.FacilityName)
        </dd>
        <dt class="col-sm-2">
            <a>住所</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Facilities.FacilityAddress)
        </dd>
        <dt class="col-sm-2">
            <a>電話番号</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Facilities.FacilityPhone)
        </dd>
        <dt class="col-sm-2">
            <a>開館時間</a>
        </dt>
        <dd class="col-sm-10">
            @Model.Facilities.OpeningTime.ToString("t")
        </dd>
        <dt class="col-sm-2">
            <a>閉館時間</a>
        </dt>
        <dd class="col-sm-10">
            @Model.Facilities.ClosingTime.ToString("t")
        </dd>
        <dt class="col-sm-2">
            <a>郵便番号</a>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Facilities.FacilityPostCode)
        </dd>
        <dt class="col-sm-2">
            <a>施設写真</a>
        </dt>
        <dd class="col-sm-10">
            <img src="/images/@Model.Facilities.FacilityphotoPath" alt="施設画像">
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="削除" class="btn btn-danger" /> 
    </form>
    <a asp-page="./FacilityIndex">施設一覧に戻る</a>
</div>
